#!/usr/bin/env bash
# Deploy frozen contracts
# Usage: ./scripts/deploy [options]
#
# Commands:
#   ./scripts/deploy                     Deploy contracts (dry-run)
#   ./scripts/deploy --broadcast         Deploy contracts (live)
#   ./scripts/deploy --record            Record deployment addresses
#   ./scripts/deploy --verify <id>       Verify contracts on explorer
#   ./scripts/deploy --list              List all deployments

set -e
cd "$(dirname "$0")"
node scripts/deploy.js "$@"
